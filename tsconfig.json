{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./node_modules/@types/express", "./node_modules/@types/multer"],
    "types": ["node", "express", "multer"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}